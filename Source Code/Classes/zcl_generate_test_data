      out->write( |{ sy-dbcnt } PO Head inserted successfully!| ).
    ELSE.
      ".. Print success message
      out->write( |Error writing PO Head.| ).
    ENDIF.   
    
    ".. PO Items
    ".. Fill internal table
    lt_zpo_item = VALUE #( ( po_number = 'PO001'
                             po_item   = '000001'
                             upc       = 'P001'
                             qty       = 300
                             del_date  = '20210201'
                             price     = 20
                             currency  = EUR )
                             
                           ( po_number = 'PO001'
                             po_item   = '000002'
                             upc       = 'P002'
                             qty       = 150
                             del_date  = '20210201'
                             price     = 25
